@if (Session["RTD_Authen"] == null)
{
    <text>
        <script type="text/javascript">
            $(document).ready(function () {
                $.validate({
                    form: '#formLogin'
                });
            });
        </script>
        <form id="formLogin" name="formLogin" class="navbar-form pull-right" action="@Url.Action("Login", "Home")" method="post">
            <div class="input-prepend"><span class="add-on"><i class="icon-user"></i></span>
                <input id="Username" name="Username" class="input-small" type="text" placeholder="Username" data-validation="length alphanumeric" data-validation-length="3-15">
            </div>
            <div class="input-prepend input-append"><span class="add-on"><i class="icon-lock"></i></span>
                <input id="Password" name="Password" class="input-small" type="password" placeholder="Password" data-validation="required">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </text>
} else {
    <text>
    <form id="formLogout" name="formLogout" class="navbar-form pull-right" action="@Url.Action("Logout","Home")" method="post">
        <a class="username"><i class="icon-user"></i> @Session["RTD_Name"].ToString()</a>
        <button type="submit" class="btn btn-danger"><i class="icon-off icon-white"></i> Log out</button>
    </form>
    </text>
}
