<script type="text/javascript">
    $(document).ready(function () {
        $.validate({
            form: '#form_search',
            onSuccess: function ($form) {
                var obj = new Object();
                obj.dtFrom = $("#dtFrom").val();
                obj.dtTo = $("#dtTo").val();
                obj.fg = $("#selFg").val();
